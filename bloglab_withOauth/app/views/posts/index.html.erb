<h1>Posts By <%= @author.first_name  %></h1>
<hr>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>View</th>
      <th>Edit</th>
      <th>More info</th>
   
    </tr>
  </thead>
<% @posts.each do |post|  %>
<tr>
  <td class="title"><%= post.title  %></td>
  <td><%= post.category  %></td>
  <td><%= link_to "view post", post_path(post), :class=>"btn btn-info btn-large" %></td>
  <td><%= link_to "Edit Post", edit_post_path(post), :class=>"btn btn-warning btn-large" %></td>
  <td><%= time_ago_in_words post.created_at %> ago</td>
</tr>
<% end  %>
<%= link_to "Create Post", new_author_post_path, :class=>"btn btn-success btn-large" %>
<br>
<%= link_to "RETURN", author_path(@author), :class=>"button btn btn-primary btn-large" %>
<hr>










